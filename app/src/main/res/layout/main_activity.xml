<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/group_top"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/group_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_wifi"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wi-Fi"
            android:textAlignment="center" />

        <ToggleButton
            android:id="@+id/toggle_wifi"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_bottom"
        android:layout_width="382dp"
        android:layout_height="269dp"
        android:layout_marginBottom="44dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/text_service"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Background Service"
            android:textAlignment="center" />

        <ToggleButton
            android:id="@+id/toggle_service"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="ToggleButton"
            android:textAlignment="center" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>